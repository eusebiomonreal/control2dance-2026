---
import Header from '../../components/Header';
import Footer from '../../components/Footer.astro';
import DashboardLayout from '../../components/dashboard/DashboardLayout';
import OrderHistory from '../../components/dashboard/OrderHistory';
import '../../styles/global.css';
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Mis Pedidos | Control2Dance Records</title>
		<meta name="description" content="Consulta tu historial de pedidos en Control2Dance Records." />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#020308] text-white selection:bg-[#ff4d7d] min-h-screen flex flex-col">
		<Header client:load />

		<main class="flex-1">
			<DashboardLayout client:load activeTab="orders">
				<div class="space-y-6">
					<div>
						<h1 class="text-2xl font-bold text-white mb-2">Mis Pedidos</h1>
						<p class="text-zinc-400">Historial completo de tus compras</p>
					</div>

					<OrderHistory client:load />
				</div>
			</DashboardLayout>
		</main>

		<Footer />
	</body>
</html>

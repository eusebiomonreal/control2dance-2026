---
import Header from '../../components/Header';
import Footer from '../../components/Footer.astro';
import ProductPage from '../../components/ProductPage';
import Toast from '../../components/Toast';
import '../../styles/global.css';
import { productService } from '../../services/productService';
import type { Product } from '../../types';

// SSR: Renderizar dinámicamente para soportar productos nuevos sin rebuild
export const prerender = false;

const { slug } = Astro.params;

if (!slug) {
	return Astro.redirect('/404');
}

// Cargar el producto desde la base de datos
const finalProduct = await productService.getProductBySlug(slug) as Product;

// Si no hay producto, redirigir a 404
if (!finalProduct) {
	return Astro.redirect('/404');
}

// Cargar todos los productos para navegación prev/next
const allProducts = await productService.getProducts();
const currentIndex = allProducts.findIndex(p => p.slug === slug);

const prevProductData = currentIndex > 0 ? allProducts[currentIndex - 1] : null;
const nextProductData = currentIndex < allProducts.length - 1 ? allProducts[currentIndex + 1] : null;

const prevProduct = prevProductData ? {
	slug: prevProductData.slug || prevProductData.catalogNumber?.toLowerCase().replace(/[^a-z0-9]+/g, '-') || prevProductData.id,
	name: prevProductData.name,
	image: prevProductData.image
} : null;

const nextProduct = nextProductData ? {
	slug: nextProductData.slug || nextProductData.catalogNumber?.toLowerCase().replace(/[^a-z0-9]+/g, '-') || nextProductData.id,
	name: nextProductData.name,
	image: nextProductData.image
} : null;
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{finalProduct.name} - {finalProduct.brand} | Control2Dance Records</title>
		<meta name="description" content={finalProduct.description || `${finalProduct.name} por ${finalProduct.brand}. Descarga digital en alta calidad.`} />

		<!-- Open Graph -->
		<meta property="og:title" content={`${finalProduct.name} | Control2Dance Records`} />
		<meta property="og:description" content={finalProduct.description || `${finalProduct.name} por ${finalProduct.brand}`} />
		<meta property="og:image" content={finalProduct.image} />
		<meta property="og:type" content="product" />
		<meta property="og:url" content={`https://control2dance.es/catalogo/${slug}`} />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={finalProduct.name} />
		<meta name="twitter:description" content={finalProduct.description || `${finalProduct.name} por ${finalProduct.brand}`} />
		<meta name="twitter:image" content={finalProduct.image} />

		<!-- Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "Product",
			"name": finalProduct.name,
			"description": finalProduct.description,
			"image": finalProduct.image,
			"brand": {
				"@type": "Brand",
				"name": finalProduct.brand
			},
			"offers": {
				"@type": "Offer",
				"price": finalProduct.price,
				"priceCurrency": "EUR",
				"availability": "https://schema.org/InStock"
			},
			"sku": finalProduct.catalogNumber,
			"category": finalProduct.genre,
			"releaseDate": finalProduct.year
		})} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#020308] text-white selection:bg-[#ff4d7d]">
		<Header client:load />

		<main class="max-w-screen-xl mx-auto px-8 pt-32 pb-16">
			<ProductPage client:load product={finalProduct} prevProduct={prevProduct} nextProduct={nextProduct} />
		</main>

		<Toast client:load />
		<Footer />
	</body>
</html>

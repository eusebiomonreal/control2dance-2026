        <style>
            @keyframes spin-slow {
                from {
                    transform: rotate(0deg);
                }
                to {
                    transform: rotate(360deg);
                }
            }

            @keyframes pulse-slow {
                0%,
                100% {
                    opacity: 1;
                }
                50% {
                    opacity: 0.8;
                }
            }

            @keyframes float {
                0%,
                100% {
                    transform: translateY(0) rotate(0deg);
                }
                50% {
                    transform: translateY(-20px) rotate(5deg);
                }
            }

            .animate-spin-slow {
                animation: spin-slow 8s linear infinite;
            }

            .animate-pulse-slow {
                animation: pulse-slow 3s ease-in-out infinite;
            }

            .vinyl-bg {
                position: absolute;
                width: 300px;
                height: 300px;
                border-radius: 50%;
                background: radial-gradient(
                    circle,
                    rgba(255, 77, 125, 0.1) 0%,
                    transparent 70%
                );
                animation: float 6s ease-in-out infinite;
                opacity: 0.3;
            }

            .vinyl-1 {
                top: 10%;
                left: 5%;
                animation-delay: 0s;
            }

            .vinyl-2 {
                bottom: 15%;
                right: 10%;
                animation-delay: 2s;
                width: 400px;
                height: 400px;
            }

            .vinyl-3 {
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                animation-delay: 4s;
                width: 500px;
                height: 500px;
            }

            /* Responsive adjustments */
            @media (max-width: 768px) {
                .vinyl-bg {
                    width: 200px;
                    height: 200px;
                }

                .vinyl-2 {
                    width: 250px;
                    height: 250px;
                }

                .vinyl-3 {
                    width: 300px;
                    height: 300px;
                }
            }

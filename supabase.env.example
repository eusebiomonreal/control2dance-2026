############
# Secrets
# YOU MUST CHANGE THESE BEFORE GOING INTO PRODUCTION
############

# Container prefix for naming
CONTAINER_PREFIX=control2dance-2026-supabase

# Postgres
POSTGRES_PASSWORD=your-super-secret-postgres-password-here
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=postgres

# JWT - IMPORTANT: Generate your own secrets!
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long
JWT_EXPIRY=3600

# API Keys - Generate these with scripts/generate_jwt.cjs
ANON_KEY=your-anon-key-here
SERVICE_ROLE_KEY=your-service-role-key-here

############
# URLs - IMPORTANT: Update these for your domain
############

# Your app's public URL
SITE_URL=https://your-domain.com

# Supabase API URL (Kong gateway)
API_EXTERNAL_URL=https://api.your-domain.com
SUPABASE_PUBLIC_URL=https://api.your-domain.com
SUPABASE_HOST=api.your-domain.com

# Additional redirect URLs (comma separated)
ADDITIONAL_REDIRECT_URLS=https://your-domain.com/auth/callback

############
# Auth Settings
############

DISABLE_SIGNUP=false
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=true
